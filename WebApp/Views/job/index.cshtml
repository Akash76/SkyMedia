@using AzureSkyMedia.WebApp.Models;

@{
    string gridId = "transformJobs";
}

@section head {
    <script type="text/javascript" src="~/js/transformJob.js"></script>
    <script type="text/javascript">
        $(function () {
            _childGridId = "transformJobOutputs";
            _childPropertyName = "properties.outputs";
            _spacingPatterns = @Json.Serialize(ViewData["spacingPatterns"]);
            _spacingInserts = @Json.Serialize(ViewData["spacingInserts"]);
            _storageCdnUrl = "@ViewData["storageCdnUrl"]";
            var gridId = "@gridId";
            var rows = @Json.Serialize(ViewData[gridId]);
            var columns = GetParentColumns(gridId, "Transform Job Name");
            LoadGrid(gridId, rows, columns);
            CreateTipBottom("jobCreate", "Create Job");
        })
    </script>
}

@section title {
    Media Jobs
}

<div class="grid">
    <table id="transformJobs"></table>
    <div id="gridPager"></div>
</div>

<div class="entity">
    <div>
        @Html.TextBox("name", null, new { @class = "entityName", placeholder = "[Job Name]" })
        <br><br>
        @Html.TextBox("description", null, new { @class = "entityName", placeholder = "[Job Description]" })
    </div>
    <table>
        <tr>
            <td class="inputLabel">
                Job Priority
            </td>
            <td>
                <partial name="Priority" model='new ClientControl { ClientId = "jobPriority" }' />
            </td>
        </tr>
        <tr>
            <td class="inputLabel">
                Media Transform
            </td>
            <td>
                @Html.DropDownList("transforms", null, new { @class = "inputSelect extended" })
            </td>
        </tr>
        <tr>
            <td class="inputLabel">
                Streaming Policy
            </td>
            <td>
                @Html.DropDownList("streamingPolicies", null, new { @class = "inputSelect extended" })
            </td>
        </tr>
        <tr>
            <td class="inputLabel">
                Input Asset Name
            </td>
            <td>
                @Html.TextBox("inputAssetName", null, new { @class = "entityName extended", onfocusout = "FindAsset()" })
            </td>
        </tr>
        <tr>
            <td class="inputLabel">
                Input File Url
            </td>
            <td>
                @Html.TextBox("inputFileUrl", null, new { @class = "entityName extended" })
            </td>
        </tr>
    </table>
</div>

<div class="viewButtons">
    <partial name="SiteButton" model='new SiteButton { ClientId = "jobCreate", ImageFile = "MediaEntityCreate.png", OnClick = "CreateJob()" }' />
</div>
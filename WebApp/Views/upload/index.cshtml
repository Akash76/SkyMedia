@section head {
    <link type="text/css" rel="stylesheet" href="~/lib/plupload/js/jquery.ui.plupload/css/jquery.ui.plupload.css" />
    <link type="text/css" rel="stylesheet" href="~/css/upload.css" />
    <script type="text/javascript" src="~/lib/plupload/js/moxie.min.js"></script>
    <script type="text/javascript" src="~/lib/plupload/js/plupload.min.js"></script>
    <script type="text/javascript" src="~/lib/plupload/js/jquery.ui.plupload/jquery.ui.plupload.min.js"></script>
    <script type="text/javascript" src="~/js/upload.js"></script>
    <script type="text/javascript">
        $(function () {
            SetStorageTip();
            CreateUploader();
        })
    </script>
}

@section title {
    Media Upload
}

<table class="mediaUpload">
    <tr>
        <td class="inputLabel">
            Storage Account
        </td>
        <td colspan="3">
            @Html.DropDownList("storageAccount", null, new { @class = "storageAccount", onchange = "SetStorageTip()" })
        </td>
    </tr>
    <tr>
        <td class="inputLabel">
            Media Asset
        </td>
        <td>
            @Html.TextBox("assetName", null, new { @class = "assetName", placeholder = "[Asset Name]" })
        </td>
        <td>
            @Html.TextBox("assetDescription", null, new { @class = "assetDescription", placeholder = "[Asset Description]" })
        </td>
        <td>
            @Html.TextBox("assetAlternateId", null, new { @class = "assetAlternateId", placeholder = "[Asset Alternate Id]" })
        </td>
    </tr>
</table>

<div id="mediaFileUploader"></div>
<div id="mediaUploadMessage" class="mediaUploadMessage"></div>

<table class="mediaUploadOptions">
    <tr>
        <td rowspan="2" class="mediaUploadEncoderPreset">
            @Html.CheckBox("standardEncoderPreset", false, new { onchange = "SetUploadOption(this)" })
        </td>
        <td rowspan="2" class="mediaUploadEncoderPreset">
            <span class="siteLink" onclick="window.open('http://docs.microsoft.com/azure/media-services/latest/autogen-bitrate-ladder')">
                Create Adaptive Streaming Asset<br>(Auto Bitrate Ladder)
            </span>
        </td>
        <td class="mediaUploadAnalyzerPreset">
            @Html.CheckBox("videoAnalyzerPreset", false, new { onchange = "SetUploadOption(this)" })
        </td>
        <td>
            <span class="siteLink" onclick="window.open('http://docs.microsoft.com/azure/media-services/latest/intelligence-concept#videoanalyzerpreset')">
                Create Video Analyzer Asset
            </span>
        </td>
    </tr>
    <tr>
        <td class="mediaUploadAnalyzerPreset">
            @Html.CheckBox("audioAnalyzerPreset", false, new { onchange = "SetUploadOption(this)" })
        </td>
        <td>
            <span class="siteLink" onclick="window.open('http://docs.microsoft.com/azure/media-services/latest/intelligence-concept#audioanalyzerpreset')">
                Create Audio Analyzer Asset
            </span>
        </td>
    </tr>
</table>

<div id="mediaUploadEntities" class="mediaUploadEntities"></div>
@section head {
    <link type="text/css" rel="stylesheet" href="~/lib/plupload/js/jquery.ui.plupload/css/jquery.ui.plupload.css" />
    <link type="text/css" rel="stylesheet" href="@ViewData["signiantTransferApi"]/widgets/transferProgress/mediashuttletransferprogress.css" />
    <script type="text/javascript" src="~/lib/plupload/js/moxie.min.js"></script>
    <script type="text/javascript" src="~/lib/plupload/js/plupload.min.js"></script>
    <script type="text/javascript" src="~/lib/plupload/js/jquery.ui.plupload/jquery.ui.plupload.min.js"></script>
    <script type="text/javascript" src="@ViewData["signiantTransferApi"]/transferapi.min.js"></script>
    <script type="text/javascript" src="@ViewData["signiantTransferApi"]/widgets/transferProgress/mediashuttletransferprogress.js"></script>
    <script type="text/javascript" src="~/js/uploader.js"></script>
    <script type="text/javascript" src="~/js/uploader.signiant.js"></script>
    <script type="text/javascript" src="~/js/workflow.js"></script>
    <script type="text/javascript" src="~/js/workflow.task.js"></script>
    <script type="text/javascript">
        $(function () {
            var signiantAccountKey = "@ViewData["signiantAccountKey"]";
            var asperaAccountKey = "@ViewData["asperaAccountKey"]";
            var serviceGateway = "@ViewData["signiantServiceGateway"]";
            var storageContainer = "@ViewData["storageContainer"]";
            var blockChunkSize = "@ViewData["blockChunkSize"]";
            var maxFileSize = "@ViewData["maxFileSize"]";
            var maxRetryCount = "@ViewData["maxRetryCount"]";
            var appUrl = "@ViewData["appUrl"]";
            SetWorkflowInputs(true, signiantAccountKey, asperaAccountKey);
            InitializeUploader(serviceGateway, signiantAccountKey);
            CreateUploader(storageContainer, blockChunkSize, maxFileSize, maxRetryCount, appUrl);
        })
    </script>
}

@section title {
    Azure Media File Uploader (Signiant Flight)
}

@Html.Partial("MediaUpload", new bool[] { true, false })

<div id="transferProgress"></div>

<div id="fileUploader" class="signiantUploader"></div>

<div id="transferMessage" class="transferMessage">Status:</div>

@Html.Partial("MediaWorkflow", new string[] { "true", "signiantUploader" })

@section head {
    <script type="text/javascript">
        $(function () {
            var rows = @Json.Serialize(ViewData["streamingLocators"]);
            var columns = [
                {
                    width: 500,
                    name: "name",
                    label: "Streaming Locator Name",
                    formatter: FormatColumn,
                    align: "center"
                },
                {
                    width: 100,
                    label: "Delete",
                    formatter: FormatDelete,
                    align: "center"
                }
            ];
            LoadGrid("streamingLocators", columns, rows, "@ViewData["storageCdnUrl"]", "streaming locator");
        })
    </script>
}

@section title {
    Locators
}

<table id="streamingLocators"></table>
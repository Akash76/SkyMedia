@{
    string storageCdnUrl = ViewData["storageCdnUrl"] as string;
}

@section head {
    <script type="text/javascript">
        $(function () {
            var rows = @Json.Serialize(ViewData["contentKeyAuthPolicyOptions"]);
            var columns = [
                {
                    name: "id",
                    hidden: true
                },
                {
                    width: 500,
                    name: "name",
                    label: "Content Key Authorization Policy Option Name",
                    formatter: FormatColumn,
                    align: "center"
                },
                {
                    width: 300,
                    name: "keyDeliveryType",
                    label: "Content Key Delivery Type",
                    formatter: FormatColumn,
                    align: "center"
                },
                {
                    width: 100,
                    label: "Delete",
                    formatter: FormatDelete,
                    align: "center"
                }
            ];
            LoadGrid("contentKeyAuthPolicyOptions", columns, rows, "@storageCdnUrl", "content key authorization policy option");
        })
    </script>
}

@section title {
    Content Key<br>Authorization Policy Options
}

<table id="contentKeyAuthPolicyOptions"></table>
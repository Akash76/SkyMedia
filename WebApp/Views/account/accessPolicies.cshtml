@{
    string storageCdnUrl = ViewData["storageCdnUrl"] as string;
}

@section head {
    <script type="text/javascript">
        $(function () {
            var rows = @Json.Serialize(ViewData["accessPolicies"]);
            var columns = [
                {
                    name: "id",
                    hidden: true
                },
                {
                    width: 500,
                    name: "name",
                    label: "Access Policy Name",
                    formatter: FormatColumn,
                    align: "center"
                },
                {
                    width: 100,
                    label: "Delete",
                    formatter: FormatDelete,
                    align: "center"
                }
            ];
            LoadGrid("accessPolicies", columns, rows, "@storageCdnUrl", "access policy");
        })
    </script>
}

@section title {
    Access Policies
}

<table id="accessPolicies"></table>
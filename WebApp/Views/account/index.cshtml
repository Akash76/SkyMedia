@using System.Diagnostics;

@section head {
    <script type="text/javascript">
        function DisplayEntity(innerHtml, entityCount) {
            innerHtml = innerHtml + "<tr><td>";
            if (entityCount.length > 2) {
                innerHtml = innerHtml + "<span class=\"siteLink\" onclick=\"window.location.href = '" + entityCount[2] + "'\">" + entityCount[0] + "</span>";
            } else {
                innerHtml = innerHtml + entityCount[0]
            }
            return innerHtml + ":</td><td class='entityCount'>" + entityCount[1] + "</td></tr>";
        }
        function DisplayInventory(entityCounts) {
            var innerHtml = "";
            for (var i = 0; i < 11; i++) {
                innerHtml = DisplayEntity(innerHtml, entityCounts[i]);
            }
            $("#accountInventory").html(innerHtml);
        }
        function DeleteEntities(allEntities, liveChannels) {
            SetCursor(true);
            $.post("/account/deleteEntities",
                {
                    allEntities: allEntities,
                    liveChannels: liveChannels
                },
                function () {
                    SetCursor(false);
                    window.location = window.location.href;
                }
            );
        }
        function ConfirmDelete() {
            var title = "Confirm Media Account Content Deletion (Permanent)";
            var message = "Which set of entities do you want permanently deleted from your media account?";
            var buttons = {
                "All Entities": function () {
                    DeleteEntities(true, false);
                    $(this).dialog("close");
                },
                "Child Assets": function () {
                    DeleteEntities(false, false);
                    $(this).dialog("close");
                },
                "Live Channels": function () {
                    DeleteEntities(false, true);
                    $(this).dialog("close");
                },
                Cancel: function () {
                    $(this).dialog("close");
                }
            };
            DisplayMessage(title, message, buttons);
        }
        $(function () {
            CreateTipTop("accountClear", "Clear Media Account");
            CreateTipBottom("authToken", "Azure Active Directory<br><br>JSON Web Token");
            var entityCounts = @Json.Serialize(ViewData["entityCounts"]);
            DisplayInventory(entityCounts);
        })
    </script>
}

@section title {
    Media Account Inventory
}

<table class="accountInventory">
    <tr>
        <td>
            <table id="accountInventory" class="entityCounts"></table>
        </td>
    </tr>
</table>

<div class="viewButtons">
    @if (Debugger.IsAttached)
    {
        @Html.Partial("SiteButton", new string[] { "accountClear", "AccountClear.png", "ConfirmDelete()" })
    }
</div>

<div id="authToken" class="authToken">@ViewData["authToken"]</div>
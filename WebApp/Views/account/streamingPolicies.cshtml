@section head {
    <script type="text/javascript">
        $(function () {
            var columns = [
                {
                    width: 500,
                    name: "name",
                    label: "Streaming Policy Name",
                    align: "center"
                },
                {
                    width: 100,
                    label: "Actions",
                    formatter: FormatActions,
                    align: "center"
                }
            ];
            var rows = @Json.Serialize(ViewData["streamingPolicies"]);
            LoadGrid("streamingPolicies", columns, rows, "@ViewData["storageCdnUrl"]");
        })
    </script>
}

@section title {
    Streaming Policies
}

<table id="streamingPolicies"></table>
@using AzureSkyMedia.WebApp.Models;

<!DOCTYPE html>
<html lang="en-us">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <title>Azure Media Sprite Tip</title>
        <link type="text/css" rel="stylesheet" href="//amp.azure.net/libs/amp/2.2.0/skins/amp-flush/azuremediaplayer.min.css" />
        <script type="text/javascript" src="//amp.azure.net/libs/amp/2.2.0/azuremediaplayer.min.js"></script>

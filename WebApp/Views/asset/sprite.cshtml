        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript">
            $(function () {
                var spriteVttUrl = "//viddy2-usct.streaming.media.azure.net/6e4f1543-7a3e-4199-87c8-76aeb50483a5/Tears of Steel_000001.vtt";
                var mediaPlayer = GetMediaPlayer("videoPlayer", null, null, false, spriteVttUrl);
                mediaPlayer.src(
                    [{
                        src: "//viddy2-usct.streaming.media.azure.net/6e4f1543-7a3e-4199-87c8-76aeb50483a5/Tears of Steel.ism/manifest"
                    }]
                );
            })
        </script>
    </head>
    <body>
        <partial name="MediaPlayer" model='new MediaPlayer { ContainerStyle = "mediaPlayer", ControlId = "videoPlayer", PlayerSkin = "amp-flush" }' />
    </body>
</html>
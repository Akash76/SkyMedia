@using AzureSkyMedia.PlatformServices;

@{
    MediaStream[] mediaStreams = Model;
}

<table class="mediaBar">
    <tr>
        <td id="userButtonLeft1">
        @if (ViewData.ContainsKey("accountContext"))
        {
            @Html.Partial("SiteButton", new string[] { "mediaFileUpload", "MediaUpload.png", "window.location.href = '/upload'" })
        }
        </td>
        <td id="userButtonLeft2">
        @if (ViewData.ContainsKey("accountContext"))
        {
            @Html.Partial("SiteButton", new string[] { "mediaAssetWorkflow", "MediaWorkflow.png", "window.location.href = '/workflow'" })
        }
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        @Html.Partial("SiteButton", new string[] { "mediaStreamLeft", "MediaStreamLeft.png", "SlideStreamNumber('left')" })
                    </td>
                    <td class="streamNumber left">
                        <span>@(mediaStreams.Length == 0 ? 0 : 1)</span>
                    </td>
                    <td>
                        <div id="streamSlider" class="streamSlider"></div>
                    </td>
                    <td class="streamNumber right">
                        @mediaStreams.Length
                    </td>
                    <td>
                        @Html.Partial("SiteButton", new string[] { "mediaStreamRight", "MediaStreamRight.png", "SlideStreamNumber('right')" })
                    </td>
                </tr>
            </table>
        </td>
        <td id="userButtonRight1">
        @if (ViewData.ContainsKey("accountContext"))
        {
            @Html.Partial("SiteButton", new string[] { "mediaAssetClipper", "MediaClipper.png", "DisplayVideoClipper(' " + ViewData["languageCode"] + "')" })
        }
        </td>
        <td id="userButtonRight2">
        @if (ViewData.ContainsKey("accountContext"))
        {
            @Html.Partial("SiteButton", new string[] { "mediaAssetAnalytics", "MediaAnalyticsOpen.png", "ToggleMediaAnalytics(this)" })
        }
        </td>
    </tr>
</table>

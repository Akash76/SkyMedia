<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <title>Azure Sky Media (@ViewData["appRegionName"])</title>
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-ui/themes/dot-luv/jquery-ui.min.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-ui-multiselect/jquery.multiselect.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-editable-select/dist/jquery-editable-select.min.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-json-browse/jquery.json-browse.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jqgrid/css/ui.jqgrid.css" />
        <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/qtip2/3.0.3/jquery.qtip.min.css" />
        <link type="text/css" rel="stylesheet" href="~/css/site.css" />
        @Html.Raw(javaScriptSnippet.FullScript)
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-ui-multiselect/src/jquery.multiselect.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-editable-select/dist/jquery-editable-select.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-json-browse/jquery.json-browse.js"></script>
        <script type="text/javascript" src="~/lib/jquery.scrollTo/jquery.scrollTo.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-cookie/jquery.cookie.js"></script>
        <script type="text/javascript" src="~/lib/jqgrid/js/jquery.jqGrid.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/qtip2/3.0.3/jquery.qtip.min.js"></script>
        <script type="text/javascript" src="~/js/grid.js"></script>
        <script type="text/javascript" src="~/js/qtip.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
        @RenderSection("head", false)
    </head>
    <body onload="SetLayout()">
        <table class="banner">
            <tr>
                <td class="bannerSide">
                    @Html.Partial("SiteButton", new string[] { "siteHome", "SiteHome.png", "window.location.href = '/'" })
                    @Html.Partial("SiteButton", new string[] { "siteCode", "SiteCode.png", "window.open('http://github.com/RickShahid/SkyMedia/')" })
                    @{ string accountInventoryClick = ""; }
                    @if (ViewData.ContainsKey("accountContext"))
                    {
                        accountInventoryClick = "window.location.href = '/account'";
                    }
                    else
                    {
                        accountInventoryClick = "DisplayMessage('Azure Media Services Account Inventory', 'You must be signed in to display your media services account inventory.')";
                    }
                    @Html.Partial("SiteButton", new string[] { "accountInventory", "AccountInventory.png", accountInventoryClick })
                </td>
                <td class="bannerCenter">
                    <div class="viewTitle">
                        @RenderSection("title", false)
                    </div>
                    @if (ViewData.ContainsKey("accountContext"))
                    {
                        <div id="accountContext" class="accountContext">
                            @ViewData["accountContext"]
                        </div>
                    }
                </td>
                <td class="bannerSide">
                    @Html.Partial("SiteButton", new string[] { "mediaBot", "MediaBot.png", "DisplayMessage('Azure Sky Media Bot', 'Hi, my name is Viddy. I am currently under construction.<br><br>Please check on me later. Thank you.')" })
                    @if (ViewData.ContainsKey("accountContext"))
                    {
                        @Html.Partial("SiteButton", new string[] { "userProfileEdit", "UserProfileEdit.png", "window.location.href = '" + ViewData["accountProfileEdit"] + "'" })
                        @Html.Partial("SiteButton", new string[] { "userSignOut", "UserSignOut.png", "SignOut('" + ViewData["authTokenCookie"] + "')" })
                    }
                    else
                    {
                        @Html.Partial("SiteButton", new string[] { "userDirectory", "UserDirectory.png", "window.open('http://azure.microsoft.com/en-us/services/active-directory-b2c/')" })
                        @Html.Partial("SiteButton", new string[] { "userSignIn", "UserSignIn.png", "window.location.href = '" + ViewData["accountSignUpIn"] + "'" })
                    }
                </td>
            </tr>
        </table>
        <table class="layout">
            <tr>
                <td class="layoutSide">
                    <div>
                        @Html.Partial("SiteButton", new string[] { "amsPlatform", "MediaServices.png", "window.open('http://azure.microsoft.com/en-us/services/media-services/')", "layoutButton side top" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "amsPlayer", "MediaPlayer.png", "window.open('http://azure.microsoft.com/en-us/services/media-services/media-player/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "mediaStreaming", "MediaStreaming.png", "window.open('http://azure.microsoft.com/en-us/services/media-services/live-on-demand/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "mediaEncoding", "MediaEncoding.png", "window.open('http://azure.microsoft.com/en-us/services/media-services/encoding/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "mediaProtection", "MediaProtection.png", "window.open('http://azure.microsoft.com/en-us/services/media-services/content-protection/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "mediaCertification", "MediaCertification.png", "window.open('http://azure.microsoft.com/en-us/blog/azure-media-services-certified-for-cdsa/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "mediaIndexer", "MediaIndexer.png", "window.open('http://azure.microsoft.com/en-us/services/cognitive-services/video-indexer/')", "layoutButton side" })
                    </div>
                </td>
                <td>
                    @RenderBody()
                </td>
                <td class="layoutSide">
                    <div>
                        @Html.Partial("SiteButton", new string[] { "cognitiveServices", "CognitiveServices.png", "window.open('http://azure.microsoft.com/en-us/services/cognitive-services/')", "layoutButton side top" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "appServiceWeb", "AppServiceWeb.png", "window.open('http://azure.microsoft.com/en-us/services/app-service/web/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "appServiceFunctions", "AppServiceFunctions.png", "window.open('http://azure.microsoft.com/en-us/services/functions/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "appServiceLogic", "AppServiceLogic.png", "window.open('http://azure.microsoft.com/en-us/services/app-service/logic/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "cosmosDB", "CosmosDB.png", "window.open('http://azure.microsoft.com/en-us/services/cosmos-db/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "batchRendering", "BatchRendering.png", "window.open('http://rendering.azure.com/')", "layoutButton side" })
                    </div>
                    <div>
                        @Html.Partial("SiteButton", new string[] { "botService", "BotService.png", "window.open('http://azure.microsoft.com/en-us/services/bot-service/')", "layoutButton side" })
                    </div>
                </td>
            </tr>                            
        </table>
        <div id="messageDialog"></div>
    </body>
</html>
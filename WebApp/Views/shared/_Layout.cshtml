@using AzureSkyMedia.WebApp.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <title>Azure Sky Media (@ViewData["appRegionName"])</title>
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-ui/themes/dot-luv/jquery-ui.min.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jquery-json-browse/jquery.json-browse.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/jqgrid/css/ui.jqgrid.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/qtip/jquery.qtip.min.css" />
        <link type="text/css" rel="stylesheet" href="~/css/grid.css" />
        <link type="text/css" rel="stylesheet" href="~/css/site.css" />
        @Html.Raw(javaScriptSnippet.FullScript)
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-json-browse/jquery.json-browse.js"></script>
        <script type="text/javascript" src="~/lib/jquery-cookie/jquery.cookie.js"></script>
        <script type="text/javascript" src="~/lib/jqgrid/js/jquery.jqGrid.min.js"></script>
        <script type="text/javascript" src="~/lib/jqgrid/js/i18n/grid.locale-en.js"></script>
        <script type="text/javascript" src="~/lib/qtip/jquery.qtip.min.js"></script>
        <script type="text/javascript" src="~/js/qtip.js"></script>
        <script type="text/javascript" src="~/js/grid.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
        @RenderSection("head", false)
    </head>
    <body onload="SetLayout()">
        <table class="header">
            <tr>
                <td class="headerSide">
                    <partial name="SiteButton" model='new SiteButton { ClientId = "siteHome", ImageFile = "SiteHome.png", RelativeUrl = "/" }' />
                    <partial name="SiteButton" model='new SiteButton { ClientId = "siteCode", ImageFile = "SiteCode.png", AbsoluteUrl = "http://github.com/RickShahid/SkyMedia/" }' />
                    <partial name="SiteButton" model='new SiteButton { ClientId = "mediaBlog", ImageFile = "MediaBlog.png", AbsoluteUrl = "http://azure.microsoft.com/blog/topics/media-services/" }' />
                </td>
                <td class="headerCenter">
                    <div class="viewTitle">
                        @RenderSection("title", true)
                    </div>
                </td>
                <td class="headerSide right">
                    <partial name="SiteButton" model='new SiteButton { ClientId = "botService", ImageFile = "BotService.png", AbsoluteUrl = "http://azure.microsoft.com/services/bot-service/" }' />
                    @if (ViewData.ContainsKey("accountName"))
                    {
                        <partial name="SiteButton" model='new SiteButton { ClientId = "userProfileEdit", ImageFile = "UserProfileEdit.png", RelativeUrl = ViewData["accountProfileEdit"].ToString() }' />
                        <partial name="SiteButton" model='new SiteButton { ClientId = "userSignOut", ImageFile = "UserSignOut.png", OnClick = ViewData["accountSignOut"].ToString() }' />
                    }
                    else
                    {
                        <partial name="SiteButton" model='new SiteButton { ClientId = "userDirectory", ImageFile = "UserDirectory.png", AbsoluteUrl = "http://azure.microsoft.com/services/active-directory-b2c/" }' />
                        <partial name="SiteButton" model='new SiteButton { ClientId = "userSignIn", ImageFile = "UserSignIn.png", RelativeUrl = ViewData["accountSignUpIn"].ToString() }' />
                    }
                </td>
            </tr>
        </table>
        <table class="layout">
        @if (ViewData.ContainsKey("accountName"))
        {
            <tr>
                <td colspan="3">
                    <div id="accountContext" class="accountContext">
                        @ViewData["userId"]
                        <a id="mediaAccount" class="siteLink" href="/account">(@ViewData["accountName"])</a>
                    </div>
                </td>
            </tr>
        }
            <tr>
                <td class="layoutPanel side">
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "amsPlatform", ImageFile = "MediaServices.png", AbsoluteUrl = "http://azure.microsoft.com/services/media-services/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "amsPlayer", ImageFile = "MediaPlayer.png", AbsoluteUrl = "http://azure.microsoft.com/services/media-player/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "mediaStreaming", ImageFile = "MediaStreaming.png", AbsoluteUrl = "http://azure.microsoft.com/services/media-services/live-on-demand/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "mediaEncoding", ImageFile = "MediaEncoding.png", AbsoluteUrl = "http://azure.microsoft.com/services/media-services/encoding/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "mediaProtection", ImageFile = "MediaProtection.png", AbsoluteUrl = "http://azure.microsoft.com/services/media-services/content-protection/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "mediaIndexer", ImageFile = "MediaIndexer.png", AbsoluteUrl = "http://azure.microsoft.com/services/cognitive-services/video-indexer/", StyleClass = "layoutVertical" }' />
                    </div>
                </td>
                <td class="layoutPanel body">
                    @RenderBody()
                </td>
                <td class="layoutPanel side">
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "mediaStorage", ImageFile = "MediaStorage.png", AbsoluteUrl = "http://azure.microsoft.com/en-us/services/storage/blob/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "cosmosDB", ImageFile = "CosmosDB.png", AbsoluteUrl = "http://azure.microsoft.com/services/cosmos-db/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "contentDeliveryNetwork", ImageFile = "ContentDeliveryNetwork.png", AbsoluteUrl = "http://azure.microsoft.com/services/cdn/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "appServiceWeb", ImageFile = "AppServiceWeb.png", AbsoluteUrl = "http://azure.microsoft.com/services/app-service/web/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "appServiceFunctions", ImageFile = "AppServiceFunctions.png", AbsoluteUrl = "http://azure.microsoft.com/services/functions/", StyleClass = "layoutVertical" }' />
                    </div>
                    <div>
                        <partial name="SiteButton" model='new SiteButton { ClientId = "eventGrid", ImageFile = "EventGrid.png", AbsoluteUrl = "http://azure.microsoft.com/services/event-grid/", StyleClass = "layoutVertical" }' />
                    </div>
                </td>
            </tr>
        </table>
        <div id="messageDialog"></div>
    </body>
</html>
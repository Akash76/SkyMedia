pipeline {
  agent any
  stages {
    stage('Plan') {
      steps {
        sh '''#!/bin/bash -xe

for changedFile in $(git diff --name-only $GIT_COMMIT $GIT_PR_SHA)
do
  if [ ${changedFile: -3} == ".tf" ]
  then
    terraformDirectory=$(dirname $changedFile)
    break
  fi
done

if [ ${terraformDirectory+x} ]
then
  cd $terraformDirectory
  terraform init -input=false -backend-config=backend.tf
  terraform plan -input=false -out=tfplan
fi
'''
      }
    }
  }
}

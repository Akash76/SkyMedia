pipeline {
  agent any
  parameters {
    string(name: 'BuildArchive.Artifacts', defaultValue: '.terraform tfplan')
    booleanParam(name: 'BuildArchive.AllowEmpty', defaultValue: true)
  }
  options {
    disableConcurrentBuilds()
  }
  stages {
    stage('Terraform Plan') {
      steps {
        archiveArtifacts artifacts: 'params.BuildArchive.Artifacts', allowEmptyArchive: params.BuildArchive.AllowEmpty
      }
    }
  }
}

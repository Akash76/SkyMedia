pipeline {
  agent any
  parameters {
    string(name: 'BuildArchiveArtifacts', defaultValue: '.terraform tfplan')
    booleanParam(name: 'BuildArchiveAllowEmpty', defaultValue: true)
  }
  options {
    disableConcurrentBuilds()
  }
  stages {
    stage('Terraform Plan') {
      steps {
        archiveArtifacts artifacts: 'params.BuildArchiveArtifacts', allowEmptyArchive: params.BuildArchiveAllowEmpty
      }
    }
  }
}

pipeline {
  agent any
  parameters {
    string(name: 'BuildArchive_CopyPermission', defaultValue: 'Terraform-Apply')
    string(name: 'BuildArchive_ArtifactFiles', defaultValue: '.terraform tfplan')
    booleanParam(name: 'BuildArchive_AllowEmpty', defaultValue: true)
  }
  options {
    disableConcurrentBuilds()
    copyArtifactPermission('*')
  }
  stages {
    stage('Build Artifacts') {
      steps {
        archiveArtifacts artifacts: 'tfplan', allowEmptyArchive: params.BuildArchive_AllowEmpty
      }
    }
  }
}

pipeline {
  agent any
  parameters {
    string(name: 'TERRAFORM_BACKEND_CONFIG', defaultValue: 'backend.tf')
  }
  options {
    disableConcurrentBuilds()
  }
  triggers {
    GenericTrigger(
      genericHeaderVariables: [
       [key: 'x-github-event']
      ],
      genericVariables: [
        [key: 'PULL_REQUEST_ACTION', value: '$.action'],
        [key: 'PULL_REQUEST_BRANCH', value: '$.pull_request.head.ref'],
        [key: 'PULL_REQUEST_COMMIT', value: '$.pull_request.head.sha'],
        [key: 'GITHUB_REPOSITORY_URL', value: '$.pull_request.head.repo.url']   
      ],
      causeString: 'Pull Request $PULL_REQUEST_ACTION on Branch $PULL_REQUEST_BRANCH',
      regexpFilterText: '$x_github_event',
      regexpFilterExpression: 'pull_request'
    )
  }
  stages {
    stage('GitHub Commit Analyze') {
      steps {
        sh '''#!/bin/bash -ex
          git clean -dff
          for changedFile in $(git diff --name-only $GIT_COMMIT $PULL_REQUEST_COMMIT)
          do
            if [ ${changedFile: -3} == ".tf" ]
            then
              echo -n "$(dirname $changedFile)" > tfFilePath
              break
            fi
          done
        '''
      }
    }
    stage('GitHub Check Run') {
      when {
        expression {
          fileExists('tfFilePath')
        }
      }
      steps {
        httpRequest url: "$GITHUB_REPOSITORY_URL/check-runs", httpMode: 'POST', customHeaders: [[name: 'Accept', value: "$GITHUB_ACCEPT_HEADER"],[name: 'Authorization', value: "$GITHUB_AUTH_HEADER"]]      
      }
    }
    stage('Terraform Plan') {
      when {
        expression {
          fileExists('tfFilePath')
        }
      }
      steps {
        sh '''#!/bin/bash -ex
          tfFilePath=$(cat tfFilePath)
          cd $tfFilePath
          terraform init -input=false -backend-config="$TERRAFORM_BACKEND_CONFIG" -no-color &> tfInit.txt
          terraform plan -input=false -out=tfPlan -no-color &> tfPlan.txt
        '''
      }
    }
    stage('Build Artifacts') {
      when {
        expression {
          fileExists('tfFilePath')
        }
        expression {
          dir(readFile('tfFilePath')) {
            fileExists('tfPlan')
          }
        }
      }
      steps {
        dir(readFile('tfFilePath')) {
          archiveArtifacts artifacts: '**'
        }
      }
    }
  }
}

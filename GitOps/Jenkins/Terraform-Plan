pipeline {
  agent any
  parameters {
    string(name: 'BuildArchive_CopyPermission', defaultValue: 'Terraform-Apply')
    string(name: 'BuildArchive_ArtifactFileSet', defaultValue: '.terraform tfplan')
    booleanParam(name: 'BuildArchive_AllowEmpty', defaultValue: true)
  }
  options {
    disableConcurrentBuilds()
    copyArtifactPermission('Terraform-Apply')
  }
  stages {
    stage('Build Artifacts') {
      steps {
        archiveArtifacts artifacts: 'params.BuildArchive_ArtifactFiles', allowEmptyArchive: params.BuildArchive_AllowEmpty
      }
    }
  }
}

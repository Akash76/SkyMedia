pipeline {
  agent any
  stages {
    stage('Plan') {
      steps {
        sh '''#!/bin/bash -xe

for changedFile in $(git diff --name-only $GIT_COMMIT $GIT_PR_SHA)
do
  if [ ${changedFile: -3} == ".tf" ]
  then
    terraformDirectory=$(dirname $changedFile)
    break
  fi
done

if [ -v terraformDirectory ]
then
  cp $TF_BACKEND_CONFIG $terraformDirectory
  cd $terraformDirectory
  terraform init -input=false -backend-config=$TF_BACKEND_CONFIG
  terraform plan -input=false -out=tfplan
fi
'''
      }
    }
  }
  post {
    success {
      dir($terraformDirectory) {
        archiveArtifacts '**'
      }
    }
  }
}

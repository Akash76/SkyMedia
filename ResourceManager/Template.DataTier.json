{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "appDomain": {
      "type": "string"
    },
    "regionName": {
      "type": "string"
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('appName'), parameters('regionName')))]",
    "databaseAccountName": "[toLower(parameters('appName'))]",
    "databaseAccountNameDocument": "[variables('databaseAccountName')]",
    "databaseAccountNameTable": "[concat(variables('databaseAccountName'), '-table')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "name": "[variables('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "kind": "Storage",
      "sku": {
        "name": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "name": "[concat(variables('storageAccountName'), '1')]",
      "location": "[resourceGroup().location]",
      "kind": "Storage",
      "sku": {
        "name": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "name": "[concat(variables('storageAccountName'), '2')]",
      "location": "[resourceGroup().location]",
      "kind": "BlobStorage",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "name": "[concat(variables('storageAccountName'), '3')]",
      "location": "[resourceGroup().location]",
      "kind": "BlobStorage",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "accessTier": "Cool"
      }
    },
    {
      "condition": "[equals(parameters('regionName'), 'USWest')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2016-03-31",
      "name": "[variables('databaseAccountNameDocument')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('databaseAccountNameDocument')]",
        "databaseAccountOfferType": "Standard"
      },
      "tags": {
        "defaultExperience": "DocumentDB"
      }
    },
    {
      "condition": "[equals(parameters('regionName'), 'USWest')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2016-03-31",
      "name": "[variables('databaseAccountNameTable')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('databaseAccountNameTable')]",
        "databaseAccountOfferType": "Standard"
      },
      "tags": {
        "defaultExperience": "Table"
      }
    }
  ],
  "outputs": {}
}
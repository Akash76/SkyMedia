{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageServiceName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 23,
      "metadata": {
        "description": "Storage service name must be between 3 and 23 characters (letters and numbers only)."
      }
    },
    "batchServiceName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Batch service name must be between 3 and 24 characters (letters and numbers only)."
      }
    },
    "mediaServiceName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Media service name must be between 3 and 24 characters (letters and numbers only)."
      }
    },
    "mediaRegionName": {
      "type": "string",
      "metadata": {
        "description": "Azure region name for all media resources, including storage and batch resoruces."
      }
    }
  },
  "variables": {
    "storageServiceName": "[toLower(parameters('storageServiceName'))]",
    "batchServiceName": "[toLower(parameters('batchServiceName'))]",
    "mediaServiceName": "[toLower(parameters('mediaServiceName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "location": "[parameters('mediaRegionName')]",
      "name": "[concat(variables('storageServiceName'), '1')]",
      "kind": "Storage",
      "sku": {
        "name": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "location": "[parameters('mediaRegionName')]",
      "name": "[concat(variables('storageServiceName'), '2')]",
      "kind": "BlobStorage",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-06-01",
      "location": "[parameters('mediaRegionName')]",
      "name": "[concat(variables('storageServiceName'), '3')]",
      "kind": "BlobStorage",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "accessTier": "Cool"
      }
    },
    {
      "type": "Microsoft.Batch/batchAccounts",
      "apiVersion": "2017-05-01",
      "location": "[parameters('mediaRegionName')]",
      "name": "[variables('batchServiceName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '1'))]"
      ],
      "properties": {
        "autoStorage": {
          "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '1'))]"
        }
      }
    },
    {
      "type": "Microsoft.Media/mediaServices",
      "apiVersion": "2015-10-01",
      "location": "[parameters('mediaRegionName')]",
      "name": "[variables('mediaServiceName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '1'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '2'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '3'))]"
      ],
      "properties": {
        "storageAccounts": [
          {
            "id": "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '1'))]",
            "isPrimary": true
          },
          {
            "id": "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '2'))]",
            "isPrimary": false
          },
          {
            "id": "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageServiceName'), '3'))]",
            "isPrimary": false
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}